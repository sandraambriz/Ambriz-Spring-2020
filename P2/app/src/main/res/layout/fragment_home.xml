<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserHomeFragment">

    <Button
        android:id="@+id/homepage_viewUserProductsButton"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="100dp"
        android:height="40dp"
        android:text="View Product List"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homepage_addProductEditText" />

    <Button
        android:id="@+id/homepage_addProductButton"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:text="Add A Product" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/bottom_navigation_menu" />

    <EditText
        android:id="@+id/homepage_addProductEditText"
        android:layout_width="410dp"
        android:layout_height="45dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="323dp"
        android:layout_marginRight="0dp"
        android:height="40dp"
        android:hint="Product Name"
        app:layout_constraintBottom_toTopOf="@+id/homepage_viewUserProductsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/homepage_productBrandEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:height="40dp"
        android:hint="Product Brand" />

    <EditText
        android:id="@+id/homepage_productTypeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:height="40dp"
        android:hint="Product Type" />

    <EditText
        android:id="@+id/homepage_locationOfPurchaseEditExt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:height="40dp"
        android:hint="Location of Purchase" />

    <EditText
        android:id="@+id/homepage_storeNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:height="40dp"
        android:hint="Store Name" />

    <EditText
        android:id="@+id/homepage_purchaseDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:height="40dp"
        android:hint="Purchase Date" />

    <EditText
        android:id="@+id/homepage_expirationDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:height="40dp"
        android:hint="Expiration Date" />

    <ListView
        android:id="@+id/productlist_listview"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</FrameLayout>